<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Prims47\Bundle\PaypalExpressCheckoutNVPBundle\Entity\BasePaypalExpressCheckoutNVPTransactionDetails" table="paypal_transaction_details">

        <id name="id" type="integer" column="id">
          <generator strategy="AUTO"/>
        </id>

        <field name="firstName"    column="first_name"    type="string" length="255" />
        <field name="lastName"     column="last_name"     type="string" length="255" />
        <field name="countryCode"  column="country_code"  type="string" length="20" />
        <field name="countryName"  column="country_name"  type="string" length="255" />
        <field name="street"       column="street"        type="string" length="255" />
        <field name="city"         column="city"          type="string" length="255" />
        <field name="state"        column="state"         type="string" length="255" />
        <field name="zip"          column="zip"           type="string" length="255" />
        <field name="currencyCode" column="currency_code" type="string" length="255" />

        <field name="orderTime"     column="order_time"      type="datetime" />
        <field name="transactionId" column="transaction_id"  type="string"  length="255" />
        <field name="totalDuty"     column="total_duty"      type="float" />
        <field name="costs"         column="costs"           type="float" />
        <field name="tax"           column="tax"             type="float" />

    </mapped-superclass>
</doctrine-mapping>
